<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemImageText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/itemImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Go To Link"
        app:layout_constraintEnd_toEndOf="@+id/itemImageText"
        app:layout_constraintStart_toStartOf="@+id/itemImageText"
        app:layout_constraintTop_toBottomOf="@+id/itemImageText" />
</android.support.constraint.ConstraintLayout>